{
  "name": "cipherx-extension",
  "version": "1.0.0",
  "description": "CipherX Chrome Extension - Real-time crypto trading intelligence",
  "manifest_version": 3,
  "author": "CipherX Team",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.cipherx.io/*",
    "https://raydium.io/*",
    "https://jup.ag/*",
    "https://pump.fun/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://raydium.io/*",
        "https://jup.ag/*",
        "https://pump.fun/*"
      ],
      "js": [
        "content/overlay.js"
      ],
      "css": [
        "content/overlay.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
